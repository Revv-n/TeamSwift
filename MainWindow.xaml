<Window
    x:Class="PlanSwiftApi.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PlanSwiftApi"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PlanSwiftApi"
    Width="1100"
    Height="700"
    AllowsTransparency="True"
    Background="Transparent"
    Closing="OnCloseWIndow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border BorderThickness="3" CornerRadius="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0.006" Color="#CC717171" />
                <GradientStop Offset="1" Color="#CC949292" />
                <GradientStop Offset="0.426" Color="#CC807F7F" />
                <GradientStop Offset="0.675" Color="#CC737373" />
            </LinearGradientBrush>
        </Border.Background>


        <Grid>
            <!--  Lateral Menu  -->

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="10">
                <Border BorderThickness="1" CornerRadius="15">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#66797979" />
                            <GradientStop Offset="0.993" Color="#66696969" />
                            <GradientStop Offset="0" Color="#66A5A5A5" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel Margin="0,5,0,0">
                        <Border
                            Width="35"
                            Height="35"
                            Background="#993C3C3C"
                            CornerRadius="10">
                            <Image
                                Width="25"
                                Margin="0,10,0,10"
                                Source="Resources/Images/home.png" />
                        </Border>
                        <Border Width="35" Height="35">
                            <Image
                                Width="20"
                                Margin="0,10,0,10"
                                Source="Resources/Images/setting.png" />
                        </Border>
                        <Border Width="35" Height="35">
                            <Image
                                Width="20"
                                Margin="0,10,0,10"
                                Source="Resources/Images/file.png" />
                        </Border>


                    </StackPanel>
                </Border>

                <Border
                    Width="35"
                    Height="35"
                    Margin="0,0,0,10"
                    VerticalAlignment="Bottom">
                    <Image
                        Width="20"
                        Margin="0,10,0,10"
                        Source="Resources/Images/off.png" />
                </Border>


                <!--  Top Menu  -->

            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition />
                </Grid.RowDefinitions>





                <Grid Grid.Row="0">
                    <StackPanel
                        Margin="0,20,30,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">


                        <Border
                            Width="35"
                            Height="35"
                            Margin="0,0,15,0"
                            CornerRadius="20">

                            <Image Source="/Resources/Images/story.png" Stretch="Fill" />
                        </Border>

                        <Border
                            Height="25"
                            Margin="0,0,15,0"
                            BorderBrush="#FFBBB6B6"
                            BorderThickness="0.1" />


                        <Border
                            Width="28"
                            Height="28"
                            Margin="0,0,8,0"
                            Background="#FFBBB6B6"
                            CornerRadius="20">

                            <Image
                                Width="15"
                                Height="16"
                                Source="/Resources/Images/circle.png"
                                Stretch="Fill" />
                        </Border>

                        <Border
                            Width="28"
                            Height="28"
                            Margin="0,0,8,0"
                            Background="#FFBBB6B6"
                            CornerRadius="20">

                            <Image
                                Width="15"
                                Height="16"
                                Source="Resources/Images/bell.png"
                                Stretch="Fill" />
                        </Border>
                        <Border Width="30" Height="30">
                            <Image Source="Resources/Images/user.png" Stretch="Fill">
                                <Image.Clip>
                                    <RectangleGeometry
                                        RadiusX="30"
                                        RadiusY="30"
                                        Rect="0, 0, 30, 30" />
                                </Image.Clip>
                            </Image>
                        </Border>
                    </StackPanel>
                </Grid>


                <Grid Grid.Row="1">
                    <Grid Margin="0,20,10,10">
                        <Frame Name="MainFrame" />
                    </Grid>
                </Grid>

            </Grid>















        </Grid>
    </Border>
</Window>
