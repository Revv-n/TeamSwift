<Page
    x:Class="PlanSwiftApi.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PlanSwiftApi.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HomeView"
    d:DesignHeight="700"
    d:DesignWidth="1100"
    IsManipulationEnabled="True"
    mc:Ignorable="d">
    

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2.25*" />
            </Grid.ColumnDefinitions>


            <!--  Column 0  -->



            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="2.5*" />
                </Grid.RowDefinitions>


                <!--Storages Design-->

                <Border
                    Margin="5"
                    Background="#998A8A8A"
                    CornerRadius="25"
                    Grid.Row="0">
                    <Grid Grid.Row="0">



                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>


                        <Grid Grid.Row="0" Grid.Column="0">




                            <TextBlock
                                Margin="20,10,10,0"
                                FontFamily="Global User Interface"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="white"
                                Text="Storeages"/>


                            <Border BorderThickness="0 0 0 2"
                                    BorderBrush="white"
                                    Margin="0,0,0,10"
                                    >


                                <Border.Effect>
                                    <DropShadowEffect 
                                    Color="Black" 
                                    BlurRadius="5" 
                                    ShadowDepth="3" 
                                    Opacity="0.5"
                                    Direction="270"/>
                                </Border.Effect>

                            </Border>
    
                        </Grid>



                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid Margin="20,5,20,20">
                                <ScrollViewer
                                    x:Name="ScrollStorages"
                                    HorizontalScrollBarVisibility="Disabled"
                                    PanningMode="VerticalOnly"
                                    VerticalScrollBarVisibility="Hidden">






                                    <StackPanel x:Name="StoragesPanel">

                                    </StackPanel>


                                </ScrollViewer>

                            </Grid>
                        </Grid>

                    </Grid>
                </Border>

                
                <!--Jobs Design-->
                
                <Border
                    Margin="5"
                    Background="#998A8A8A"
                    CornerRadius="25"
                    Grid.Row="1">
                    
                    
                            <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>


                            <Grid Grid.Row="0" Grid.Column="0">


                                
                                
                                <TextBlock
                                        Margin="20, 15,10,0"
                                        FontFamily="Global User Interface"
                                        FontSize="26"
                                        FontWeight="Bold"
                                        Foreground="white"
                                        Text="Jobs" />
                            </Grid>

                            <Border BorderThickness="0 0 0 2"
                                        BorderBrush="white"
                                        >


                                <Border.Effect>
                                    <DropShadowEffect 
                                        Color="Black" 
                                        BlurRadius="5" 
                                        ShadowDepth="3" 
                                        Opacity="0.5"
                                        Direction="270"/>
                                </Border.Effect>

                            </Border>

                        <ScrollViewer
                                    x:Name="ScrollJobs"
                                    HorizontalScrollBarVisibility="Disabled"
                                    PanningMode="VerticalOnly"
                                    VerticalScrollBarVisibility="Hidden">






                            <StackPanel x:Name="JobsPanel">

                            </StackPanel>


                        </ScrollViewer>


                    </Grid>

                </Border>



            </Grid>


            <!--  Column 1  -->

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="1.75*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Border
                        Margin="5"
                        Background="#998A8A8A"
                        CornerRadius="25" />
                </Grid>

                <Grid Grid.Row="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1.35*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Border
                            Margin="5"
                            Background="#998A8A8A"
                            CornerRadius="25" />
                    </Grid>

                    <Grid Grid.Column="1">
                        <Border
                            Margin="5"
                            Background="#998A8A8A"
                            CornerRadius="25" />
                    </Grid>
                </Grid>
            </Grid>



        </Grid>
    </Grid>
</Page>
